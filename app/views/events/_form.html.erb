<%= stylesheet_link_tag 'form' %>

<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="centro">
    <div class="field">
      <%= form.label :email_partecipante, style: "display: block" %>
      <%= form.text_field :email_partecipante, id: "testo", value: current_user.email %>
    </div>

    <div class="field" style="display: none">
      <%= form.label :id_raduno, style: "display: block" %>
      <%= form.number_field :id_raduno, value: params[:id_raduno], readonly: true %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <div>
<% end %>
